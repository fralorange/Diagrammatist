<UserControl x:Class="DiagramApp.Presentation.WPF.Views.Components.TabsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagramApp.Presentation.WPF.Views.Components" 
             xmlns:viewmodels="clr-namespace:DiagramApp.Presentation.WPF.ViewModels.Components"
             d:DataContext="{d:DesignInstance Type=viewmodels:TabsViewModel}"
             mc:Ignorable="d">
    <ListBox ItemsSource="{Binding Canvases}"
             SelectedItem="{Binding SelectedCanvas, Mode=TwoWay}"
             SelectionMode="Single">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Button Content="{Binding Settings.FileName}"
                        IsHitTestVisible="False"/>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
    </ListBox>
</UserControl>

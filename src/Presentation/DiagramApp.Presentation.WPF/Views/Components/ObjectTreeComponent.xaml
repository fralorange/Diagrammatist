<UserControl x:Class="DiagramApp.Presentation.WPF.Views.Components.ObjectTreeComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagramApp.Presentation.WPF.Views.Components" 
             xmlns:viewmodels="clr-namespace:DiagramApp.Presentation.WPF.ViewModels.Components"
             d:DataContext="{d:DesignInstance Type=viewmodels:ObjectTreeViewModel}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Explorer"
               HorizontalContentAlignment="Center"/>

        <TreeView Grid.Row="1">
            <TreeViewItem Header="Figure 1"/>
            <TreeViewItem Header="Figure 2"/>
            <TreeViewItem Header="Figure 3"/>
            <TreeViewItem Header="Figure group 1">
                <TreeViewItem Header="Figure 4"/>
                <TreeViewItem Header="Figure 5"/>
            </TreeViewItem>
            <TreeViewItem Header="Figure 6"/>
        </TreeView>
    </Grid>
</UserControl>

<?xml version="1.0" encoding="utf-8" ?>
<toolkit:UniformItemsLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                            xmlns:loc="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
                            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                            xmlns:wrappers="clr-namespace:DiagramApp.Client.ViewModels.Wrappers"
                            xmlns:viewmodel="clr-namespace:DiagramApp.Client.ViewModels"
                            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                            x:Class="DiagramApp.Client.Components.Specific.Properties.ShapePropertiesView"
                            x:DataType="viewmodel:MainViewModel"
                            MaxColumns="2"
                            Padding="5">
    <Label Text="{loc:Translate Width, StringFormat='{0}: '}"
       Margin="0, 0, 0, 15"/>
    <Entry Text="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CurrentCanvas.SelectedFigure.Width, Mode=OneWay, FallbackValue=0}"
           Completed="OnWidthEntryCompleted">
        <Entry.Behaviors>
            <toolkit:NumericValidationBehavior x:Name="ShapeWidthValidator"
                                               ValidStyle="{StaticResource ValidEntry}"
                                               InvalidStyle="{StaticResource InvalidEntry}"
                                               Flags="ValidateOnValueChanged"/>
        </Entry.Behaviors>
    </Entry>

    <Label Text="{loc:Translate Height, StringFormat='{0}: '}"
       Margin="0, 0, 0, 15"/>
    <Entry Text="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CurrentCanvas.SelectedFigure.Height, Mode=OneWay, FallbackValue=0}"
           Completed="OnHeightEntryCompleted">
        <Entry.Behaviors>
            <toolkit:NumericValidationBehavior x:Name="ShapeHeightValidator"
                                               ValidStyle="{StaticResource ValidEntry}"
                                               InvalidStyle="{StaticResource InvalidEntry}"
                                               Flags="ValidateOnValueChanged"/>
        </Entry.Behaviors>
    </Entry>

    <Label Text="{loc:Translate AspectRatio, StringFormat='{0}: '}"
           Margin="0, 0, 0, 15"/>
    <CheckBox ToolTipProperties.Text="{loc:Translate AspectRatioDescription}"
              IsChecked="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=CurrentCanvas.SelectedFigure.Aspect, Mode=OneWay}"
              CheckedChanged="OnAspectCheckboxChanged"/>
</toolkit:UniformItemsLayout>

    <Style TargetType="Entry" x:Key="EntryNew">
        <Setter Property="WidthRequest" Value="120"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

    <Style TargetType="Entry" x:Key="EntryFileNew" BasedOn="{StaticResource EntryNew}">
        <Setter Property="WidthRequest" Value="250"/>
    </Style>

    <Style TargetType="Entry" x:Key="InvalidEntryFileNew" BasedOn="{StaticResource EntryFileNew}">
        <Setter Property="TextColor" Value="Red" />
    </Style>

    <Style TargetType="Entry" x:Key="InvalidEntryNew" BasedOn="{StaticResource EntryNew}">
        <Setter Property="TextColor" Value="Red" />
    </Style>

    <Style TargetType="Entry" x:Key="InvalidEntry">
        <Setter Property="TextColor" Value="Red" />
    </Style>

    <Style TargetType="Entry" x:Key="ValidEntry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="Entry" x:Key="PointsEntry">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HeightRequest" Value="25" />
        <Setter Property="WidthRequest" Value="35" />
    </Style>

    <Style TargetType="Frame" x:Key="DefaultFrame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"/>
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <Style TargetType="Frame" BasedOn="{StaticResource DefaultFrame}"/>
    
    <Style TargetType="components:EditorView" BasedOn="{StaticResource DefaultFrame}"/>
    <Style TargetType="components:ControlsView" BasedOn="{StaticResource DefaultFrame}"/>
    <Style TargetType="components:ExplorerView" BasedOn="{StaticResource DefaultFrame}"/>
    <Style TargetType="components:PropertiesView" BasedOn="{StaticResource DefaultFrame}"/>

    <Style TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray600}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Gray900}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="ImageButton" x:Key="Tool">
        <Setter Property="MinimumWidthRequest" Value="50"/>
        <Setter Property="MaximumWidthRequest" Value="50"/>
        <Setter Property="MinimumHeightRequest" Value="60"/>
        <Setter Property="MaximumHeightRequest" Value="60"/>
    </Style>

    <Style TargetType="VerticalStackLayout" x:Key="ToolLayout">
        <Setter Property="Spacing" Value="5" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="VerticalStackLayout" x:Key="LineJoinLayout" BasedOn="{StaticResource ToolLayout}">
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Label" x:Key="LabelNew">
        <Setter Property="HorizontalTextAlignment" Value="End"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelControl">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray400}}" />
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <Style TargetType="Label" x:Key="LabelControlName" BasedOn="{StaticResource LabelControl}">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
    </Style>

    <Style TargetType="Span">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="Label" x:Key="Headline">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label" x:Key="SubHeadline">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark={StaticResource White}}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="ListView">
        <Setter Property="SeparatorColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="RefreshControlColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}" />
    </Style>

    <Style TargetType="Line">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
    </Style>


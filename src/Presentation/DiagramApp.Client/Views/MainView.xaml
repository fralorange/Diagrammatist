<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiagramApp.Client.MainPage"
             Title="">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Файл">
            <MenuFlyoutItem Text="Новый файл" Clicked="OnNewFileClicked"/>
            <MenuFlyoutItem Text="Открыть файл"/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Сохранить"/>
            <MenuFlyoutItem Text="Сохранить как"/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Выход"/>
        </MenuBarItem>
        <MenuBarItem Text="Редактирование">

        </MenuBarItem>
        <MenuBarItem Text="Вид">

        </MenuBarItem>
        <MenuBarItem Text="Справка">

        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <StackLayout>
        <ScrollView Orientation="Horizontal"
                    Margin="30, 0, 30, 0">
            <StackLayout x:Name="TabHeaders" Orientation="Horizontal">
            </StackLayout>
        </ScrollView>

        <Frame Margin="30,1,30,30" 
               BackgroundColor="{StaticResource Gray900}"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand">
            <ContentView x:Name="MainContent"/>
        </Frame>
    </StackLayout> 
</ContentPage>

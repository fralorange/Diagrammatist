<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DropShadowEffect x:Key="PrimaryGlowEffect" 
                        BlurRadius="30" 
                        Color="{DynamicResource PrimaryGlowColor}"
                        Opacity="0.5"
                        Direction="270"/>

    <DropShadowEffect x:Key="SecondaryGlowEffect" 
                        BlurRadius="12" 
                        Color="{DynamicResource SecondaryGlowColor}"
                        Opacity="0.4"
                        Direction="270"/>
</ResourceDictionary>
<UserControl x:Class="Diagrammatist.Presentation.WPF.Views.Components.ToolbarComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diagrammatist.Presentation.WPF.Views.Components" 
             xmlns:viewmodels="clr-namespace:Diagrammatist.Presentation.WPF.ViewModels.Components"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources.Localization.Toolbar.ToolbarResources"
             d:DataContext="{d:DesignInstance Type=viewmodels:ToolbarViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ControlTemplate x:Key="ToolTemplate" TargetType="ContentControl">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ContentPresenter Grid.Row="0"/>
                <Label Grid.Row="1" 
                       HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Bottom"
                       Content="{TemplateBinding Tag}"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <ToolBar ToolBarTray.IsLocked="True">
        <ContentControl Template="{StaticResource ToolTemplate}" Tag="{lex:Loc Clipboard}">
            <StackPanel Orientation="Horizontal">
                <Button Content="{lex:Loc Diagrammatist.Presentation.WPF:Resources.Localization.Commands.CommandsResources:Paste}"
                        Command="{Binding PasteCommand}"
                        IsEnabled="{Binding HasCanvas}"/>
                <StackPanel Orientation="Vertical">
                    <Button Content="{lex:Loc Diagrammatist.Presentation.WPF:Resources.Localization.Commands.CommandsResources:Copy}"
                            Command="{Binding CopyCommand}"
                            IsEnabled="{Binding HasSelectedFigure}"/>
                    <Button Content="{lex:Loc Diagrammatist.Presentation.WPF:Resources.Localization.Commands.CommandsResources:Cut}"
                            Command="{Binding CutCommand}"
                            IsEnabled="{Binding HasSelectedFigure}"/>
                    <Button Content="{lex:Loc Diagrammatist.Presentation.WPF:Resources.Localization.Commands.CommandsResources:Duplicate}"
                            Command="{Binding DuplicateCommand}"
                            IsEnabled="{Binding HasSelectedFigure}"/>
                </StackPanel>
            </StackPanel>
        </ContentControl>
        <Separator/>
        <ContentControl Template="{StaticResource ToolTemplate}" Tag="{lex:Loc Controls}">
            <StackPanel Orientation="Horizontal">
                <Button Content="{lex:Loc SelectionMode}" 
                        Command="{Binding ChangeModeCommand}"
                        CommandParameter="Select"/>
                <Button Content="{lex:Loc PanMode}" 
                        Command="{Binding ChangeModeCommand}"
                        CommandParameter="Pan"/>
                <Button Content="{lex:Loc TransformMode}" 
                        Command="{Binding ChangeModeCommand}"
                        CommandParameter="Transform"/>
            </StackPanel>
        </ContentControl>
        <Separator/>
    </ToolBar>
</UserControl>
